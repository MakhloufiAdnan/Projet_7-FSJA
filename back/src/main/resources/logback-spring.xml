<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--
      JSON logs pour ingestion Logstash.
      - Ã©crit des lignes JSON dans ${LOG_PATH}/microcrm-backend.json
      - et garde un console log lisible en dev
    -->

    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="microcrm"/>
    <property name="LOG_PATH" value="${LOG_PATH:-/app/logs}"/>

    <!-- Console lisible -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Fichier JSON (rotation quotidienne) -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/microcrm-backend.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/microcrm-backend.%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"${APP_NAME}","component":"backend"}</customFields>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="JSON_FILE"/>
    </root>
</configuration>
